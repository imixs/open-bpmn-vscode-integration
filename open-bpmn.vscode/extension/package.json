{
  "name": "open-bpmn-vscode-extension",
  "displayName": "Open-BPMN",
  "version": "1.0.22",
  "private": "true",
  "description": "Free BPMN 2.0 modeling tool to create and edit .bpmn files",
  "categories": [
    "Programming Languages",
    "Visualization",
    "Education"
  ],
  "keywords": [
    "BPMN",
    "modelling",
    "Workflow Engine",
    "diagram",
    "Business process analysis"
  ],
  "homepage": "https://github.com/imixs/open-bpmn/",
  "bugs": "https://github.com/imixs/open-bpmn/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/imixs/open-bpmn-vscode-integration.git"
  },
  "author": {
    "name": "Imixs-Workflow"
  },
  "contributors": [
    {
      "name": "Imixs-Workflow Project",
      "email": "info@imixs.com",
      "url": "https://www.imixs.org/"
    }
  ],
  "publisher": "open-bpmn",
  "main": "./lib/index",
  "workspaces": {
    "packages": [
      "**/open-bpmn-vscode-webview"
    ]
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf lib tsconfig.tsbuildinfo ",
    "download:Server": "ts-node scripts/download.ts",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "watch": "tsc -w"
  },
  "contributes": {
    "commands": [
      {
        "command": "bpmn.fit",
        "title": "Fit to Screen",
        "category": "BPMN Diagram",
        "enablement": "activeCustomEditorId == 'bpmn-diagram'"
      },
      {
        "command": "bpmn.center",
        "title": "Center selection",
        "category": "bpmn Diagram",
        "enablement": "activeCustomEditorId == 'bpmn-diagram'"
      },
      {
        "command": "bpmn.showProperties",
        "title": "BPMN Properties",
        "category": "BPMN Diagram",
        "enablement": "activeCustomEditorId == 'bpmn-diagram' && bpmn.editorSelectedElementsAmount == 1"
      },
      {
        "command": "bpmn.exportAsSVG",
        "title": "Export as SVG",
        "category": "BPMN Diagram",
        "enablement": "activeCustomEditorId == 'bpmn-diagram'"
      }
    ],
    "customEditors": [
      {
        "viewType": "bpmn-diagram",
        "displayName": "BPMN 2.0 Diagram Editor",
        "selector": [
          {
            "filenamePattern": "*.bpmn"
          },
          {
            "filenamePattern": "*.bpmn2"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "bpmn.fit",
        "when": "activeCustomEditorId == 'bpmn-diagram'"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "bpmn.center",
        "when": "activeCustomEditorId == 'bpmn-diagram'"
      },
      {
        "key": "alt+a",
        "mac": "alt+a",
        "command": "bpmn.selectAll",
        "when": "activeCustomEditorId == 'bpmn-diagram'"
      },
      {
        "key": "alt+p",
        "mac": "alt+p",
        "command": "bpmn.showProperties",
        "when": "activeCustomEditorId == 'bpmn-diagram' && bpmn.editorSelectedElementsAmount == 1"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "bpmn.editor.title",
          "group": "bookmarks"
        },
        {
          "command": "bpmn.showProperties",
          "group": "navigation",
          "when": "activeCustomEditorId == 'bpmn-diagram' && bpmn.editorSelectedElementsAmount == 1"
        }
      ],
      "bpmn.editor.title": [
        {
          "command": "bpmn.fit",
          "group": "navigation",
          "when": "activeCustomEditorId == 'bpmn-diagram'"
        },
        {
          "command": "bpmn.center",
          "group": "navigation",
          "when": "activeCustomEditorId == 'bpmn-diagram'"
        },
        {
          "command": "bpmn.exportAsSVG",
          "when": "activeCustomEditorId == 'bpmn-diagram'"
        }
      ]
    },
    "submenus": [
      {
        "id": "bpmn.editor.title",
        "label": "Diagram"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@eclipse-glsp/vscode-integration": "1.1.0-RC10",
    "@vscode/codicons": "^0.0.25",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "path": "^0.12.7",
    "ts-loader": "^6.2.1",
    "ts-node": "^10.8.2"
  },
  "engines": {
    "java": ">=11.0.0",
    "vscode": "^1.54.0"
  },
  "icon": "logo-openbpmn.png"
}
